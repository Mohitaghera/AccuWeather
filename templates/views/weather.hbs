<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlink}}
</head>
<body>
      {{>navbar}}
    <!-- Main header  -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">

            <div class="main_content">
                <form action="" class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter city name" autocomplete="off">
                    <input type="submit" id="submitbtn" value="Search">
                </form>
            </div>
            <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day">Sunday</p>
                        <p id="today_date">08 JULY</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name" >output</p>
                        <div class="middle_layer data_hide">
                            <p><span id="temp">temp</span><sup>o</sup><span>C</span></p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>

                        </div>
                    </div>
            </div>

        </div>
      </div>
    </div>
  <!-- Footer -->
  {{>footer}}

  <script src="js/index.js"></script>
  <script>
    const day = document.getElementById('day');
    let week = new Array(7);
    week[0]='Sunday';
    week[1]='Monday';
    week[2]='Tuesday';
    week[3]='Wednesday';
    week[4]='Thursday';
    week[5]='Friday';
    week[6]='Saturday';

    let month = new Array(12);
    month[0] = 'JAN';
    month[1] = 'FEB';
    month[2] = 'MAR';
    month[3] = 'APR';
    month[4] = 'MAY';
    month[5] = 'JUN';
    month[6] = 'JUL';
    month[7] = 'AUG';
    month[8] = 'SEP';
    month[9] = 'OCT';
    month[10] = 'NOV';
    month[11] = 'DEC';

    const today_date = document.getElementById('today_date');
    let now = new Date();
    days = week[now.getDay()];
    day.innerText= days;
    today_date.innerText = `${now.getDate()  } ${month[now.getMonth()]}`
    
  </script>
</body>
</html>