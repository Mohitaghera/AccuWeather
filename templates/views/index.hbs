<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlink}}
</head>
<body>
      {{>navbar}}
    <!-- Main header  -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <!-- Left side div -->
          <div class="row">
            <div class="col-md-6 col-12 main_header_left">
              <p>Welcome to weather app</p>
              <h2>Get The Letest <span class="text_clr">Weather</span> Info Of Your City</h2>
              <a href="/weather"><button>Check now</button></a>
            </div>
            
          <!-- Right side div -->
          <div class="col-md-6 col-12 main_header_right">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class=" w-100" src="Images/1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class=" w-100" src="Images/2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class=" w-100" src="Images/5.jpg" alt="Third slide">
                </div>
                <div class="carousel-item">
                  <img class=" w-100" src="Images/7.jpg" alt="Fourth slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Footer -->
  {{>footer}}
</body>
</html>